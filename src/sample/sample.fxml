<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
   <TextArea fx:id="chatField" GridPane.rowIndex="0" editable="false"/>
   <TextField fx:id="messageField" GridPane.rowIndex="1" promptText="Введите сообщение" onAction="#sendMsg"/>
   <Button fx:id="sendBtn" GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#sendMsg"/>
</GridPane>